{
  "name": "hwista-ssoo",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@10.28.0",
  "description": "SSOO - SI/SM 조직의 Opportunity-Project-System 통합 업무 허브",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "clean": "turbo clean && rimraf node_modules",
    "dev:server": "turbo dev --filter=server",
    "dev:web-pms": "turbo dev --filter=web-pms",
    "build:server": "turbo build --filter=server",
    "build:web-pms": "turbo build --filter=web-pms",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "rimraf": "^6.0.0",
    "turbo": "^2.3.0",
    "typescript": "^5.7.0"
  },
  "lint-staged": {
    "apps/**/*.{ts,tsx}": "pnpm run lint",
    "packages/**/*.{ts,tsx}": "pnpm run lint"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
