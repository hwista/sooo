{
  "name": "@ssoo/database",
  "version": "0.0.1",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "dev": "tsc --watch",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "docs:db:dbml": "prisma generate --schema prisma/schema.prisma",
    "docs:db:split": "node scripts/split-dbml.js",
    "docs:db:common": "dbdocs build --project ssoo-common --input dbml/common.dbml --output ../../docs/common/reference/db",
    "docs:db:pms": "dbdocs build --project ssoo-pms --input dbml/pms.dbml --output ../../docs/pms/reference/db",
    "docs:db:dms": "dbdocs build --project ssoo-dms --input dbml/dms.dbml --output ../../docs/dms/reference/db",
    "docs:db": "pnpm run docs:db:dbml && pnpm run docs:db:split && pnpm run docs:db:common && pnpm run docs:db:pms && pnpm run docs:db:dms"
  },
  "dependencies": {
    "@prisma/client": "^6.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/pg": "^8.16.0",
    "dotenv": "^17.2.3",
    "pg": "^8.17.1",
    "prisma": "^6.2.0",
    "prisma-dbml-generator": "^0.12.0",
    "dbdocs": "^0.8.5",
    "rimraf": "^6.0.0",
    "typescript": "^5.7.0"
  }
}
